
*
	margin: 0
	padding: 0
	box-sizing border-box 
	transition 1s all ease
a
	text-decoration: none
.but1
	display block
	width 150px
	height 30px
	background: #D73149
	color #fff
	text-align: center
	line-height 30px
	&:hover
		background: #E36A7B
		color #000
img
	width 100%
	height auto
body
	font-size: 14px
	font-family: sans-serif
	.wrapper
		background: url(../img/fon.png)
		header
			width 100%
			height 100%
			position: relative
			.top
				position: absolute
				top 0
				left 0
				right 0
				height 100%
				nav
					height 100px
					background: rgba(64, 64, 64, .45)
					.menu	
						width: 63.541%
						margin-left 15.36%
						>a
							float left
							line-height 100px
							color #fff
							text-transform: uppercase
							text-indent: 10px
							&:hover
								text-shadow: 0 0 5px #fff
						ul
							float right
							width 70%
							height 100%
							
							li
								float left
								list-style-type: none
								width 20%
								height 100%
								
								a
									display block
									color #fff
									text-align: center
									line-height 100px
									
									height 100%
									width 100%
									&:hover
										background: rgba(75, 75, 75, .75)
				.cont1
					color #fff
					margin-left 15.36%
					padding-left 4%
					
					h1
						text-transform: uppercase
						font-size: 40px
					p
						font-size: 1.2em
		main
			.consider
				width: 63.541%
				margin-left 15.36%

				background-size: contain
				overflow hidden
				h2
					text-align: center
					color #7DC39F
				.cont2
					overflow hidden
					.book
						float left
						width 40%
						
					.descr
						float right
						width 40%
						article
							overflow hidden
							margin-bottom 2%
							h3
								color #7DC39F	
							
							a
								display block
								float left
								overflow hidden
								width 60px
								text-align: center
								
							p
								width 70%
								
								float left
							
								
								
						.art1
							a
								img	
									width 49px
									height 47px
						.art2
							a
								img
									width 35px
									height 55px
						.art3
							a
								img
									width 50px
									height 50px
						.art4
							a
								img
									width 47px
									height 46px
				>a
					text-align: center
					margin 0 auto
					transform translateX(-50%)
			.slider-wrap
				background: #353535
				input
					display none
				
				#but1:checked ~ .slider .slide-cont .slide
					margin-left -100%
				#but2:checked ~ .slider .slide-cont .slide
					margin-left -114.2857%
				#but3:checked ~ .slider .slide-cont .slide
					margin-left -128.5714%
				#but4:checked ~ .slider .slide-cont .slide
					margin-left -142.8571%
				#but5:checked ~ .slider .slide-cont .slide
					margin-left -157.1428%
				#but6:checked ~ .slider .slide-cont .slide
					margin-left -171.4285%
				#but7:checked ~ .slider .slide-cont .slide
					margin-left -185.7142%
				#but1:checked ~ .slider .slide-cont .slide li:nth-child(11),
				#but2:checked ~ .slider .slide-cont .slide li:nth-child(12),
				#but3:checked ~ .slider .slide-cont .slide li:nth-child(13),
				#but4:checked ~ .slider .slide-cont .slide li:nth-child(14),
				#but5:checked ~ .slider .slide-cont .slide li:nth-child(15),
				#but6:checked ~ .slider .slide-cont .slide li:nth-child(16),
				#but7:checked ~ .slider .slide-cont .slide li:nth-child(17)
				
					border 3px solid #000
					transform scale(1.3)
				#but1:checked ~ .slider label:nth-child(2),
				#but2:checked ~ .slider label:nth-child(3),
				#but3:checked ~ .slider label:nth-child(4),
				#but4:checked ~ .slider label:nth-child(5),
				#but5:checked ~ .slider label:nth-child(6),
				#but6:checked ~ .slider label:nth-child(7),
				#but7:checked ~ .slider label:nth-child(1)
					
						
					display block
				#but1:checked ~ .slider label:nth-child(7),
				#but2:checked ~ .slider label:nth-child(1),
				#but3:checked ~ .slider label:nth-child(2),
				#but4:checked ~ .slider label:nth-child(3),
				#but5:checked ~ .slider label:nth-child(4),
				#but6:checked ~ .slider label:nth-child(5),
				#but7:checked ~ .slider label:nth-child(6)
					
					display block
					left 2%
					>span
						transform rotate(-45deg)
				#but1:checked ~.slider .div-text .text1,
				#but2:checked ~.slider .div-text .text2,
				#but3:checked ~.slider .div-text .text3,
				#but4:checked ~.slider .div-text .text4,
				#but5:checked ~.slider .div-text .text5,
				#but6:checked ~.slider .div-text .text6,
				#but7:checked ~.slider .div-text .text7
					
					display block	
				.slider
					width: 63.541%
					margin-left 15.36%
					font-size .9em
					position: relative
					padding 50px
					label
						display none
						width 40px
						height 40px
						
						border-radius 50%
						position: absolute
						top 37%
						
						transform translateY(-50%)
						right 2%
						
						&:hover
							cursor pointer
						&:hover>span
							
							border-top 3px solid #6DC09C
							border-left 3px solid #6DC09C
						span
							position absolute
							display block
							width 20px
							height 20px
							border-top 3px solid #598A73
							border-left 3px solid #598A73
							top 30%
							left 30%
							transform rotate(135deg)
								
					.slide-cont
						width 80%
						overflow hidden	
						margin: 0 auto
						h3
							text-align: center
							color #72C59F
							font-size 20px
							margin-bottom 10px
						
						.slide
							width 300%
							margin 0 auto
							overflow hidden
							margin-left -100%
							position: relative
							padding-top 3%
							padding-bottom 3%
							
							li
								float left
								width calc(100%/21)
								border-radius 50%
								overflow: hidden
					
					.div-text
						.text
							display none
						
							h3
								text-align: center
								color #72C59F
							p
								color #fff
								text-align: center		
			.aboutus
				width: 63.541%
				margin-left 15.36%
				h3
					color #72C59F
					font-size 20px
					text-align: center
					font-size: 25px
				.cont2
					overflow hidden
					.imag
						width 60%	
						float left
					.textt
						float right
						width 30%	
