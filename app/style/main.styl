			background: #353535
			padding 2%
			
			color #fff
			font-size: .9em
			i
				color #fff
			
			h3
				text-align: center
				font-size: 1.7em
				color #fff
			p
				margin-top 1%
			.cont3
				overflow hidden
				>div
					width 33%
					float left
					text-align: center
					padding 1%
				.icons
					a
						margin-right 1%
