								background: #ccc
						p
							margin-top 50%
							font-size: .8em
		
			.form
				padding 60px
				background-image url(../img/fon2.png)
				background-size: cover
				background-repeat no-repeat
				background-position: 40% 30%
				
				
				form
					display block
					margin 0 auto	
					background: #F7F7F7	
					width 30%
					position: relative
					padding 2%
					
					legend
						font-size: 2em
						font-weight: bold
						text-align: center
					input
						display block
						width 85%
						margin: 0 auto
						padding 5px
						margin-top 3%
					label
						margin-left 7%
						text-align: center
						
						margin-bottom 3%
						
						span
							color #D92352
					p 
						text-align: center
						font-size: .9em
					button
						display block
						padding 5px 10px
						border none
						color #fff
						position absolute
						top 100%
						left 50%
						transform translate(-50%)
						background: #D73149
						&:hover
							box-shadow 0 0 5px #000
